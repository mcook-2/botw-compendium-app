<%= form_with url: search_path, method: :get, local: true, class: "search-form" do %>
  <div>
    <%= label_tag :query, "Search" %>
    <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "search-input" %>

    <%= label_tag :category, "Category" %>
    <%= select_tag :category, options_for_select(
      [["All", "all"], ["Monsters", "monsters"], ["Creatures", "creatures"], ["Materials", "materials"], ["Equipment", "equipment"], ["Treasures", "treasures"]],
      params[:category]
    ), class: "search-dropdown" %>

    <%= label_tag :sort, "Sort by" %>
    <%= select_tag :sort, options_for_select(
      [["Name", "name"], ["Id", "id"]],
      params[:sort]
    ), class: "search-dropdown" %>

    <%= form.label :per_page, "Results per page" %>
    <%= form.select :per_page, options_for_select([10, 20, 50, 100], params[:per_page]) %>

    <%= submit_tag "Search", class: "search-button" %>
  </div>
<% end %>
