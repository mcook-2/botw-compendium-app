<div class="col-full col-sm-half col-md-third col-lg-fourth entry-container">
  <div class="entry-wrapper">
  <a href="<%= monster_path(monster) %>" style="text-decoration: none; color: inherit;">
    <div class="row">
      <div class="col-img">
        <div class="col-img-wrapper">
          <img src="<%= monster.image_url %>" class="block" alt="<%= monster.name %>">
        </div>
      </div>
      <div class="col-name">
        <div class="col-name-wrapper">
          <h3 class="text-gold"><%= monster.name %></h3>
          <p class="text-blue"><%= monster.id %></p>
        </div>
      </div>
    </div>
  </div>