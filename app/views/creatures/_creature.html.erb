<div class="col-full col-sm-half col-md-third col-lg-fourth entry-container">
  <div class="entry-wrapper">
    <div class="row">
      <div class="col-img">
        <div class="col-img-wrapper">
          <img src="<%= creature.image_url %>" class="block" alt="<%= creature.name %>">
        </div>
      </div>
      <div class="col-name">
        <div class="col-name-wrapper">
          <h3 class="text-gold"><%= creature.name %></h3>
          <p class="text-blue"><%= creature.id %></p>
        </div>
      </div>
    </div>
  </div>