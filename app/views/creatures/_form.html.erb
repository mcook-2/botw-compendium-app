    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :edible, style: "display: block" %>
    <%= form.check_box :edible %>
  </div>

  <div>
    <%= form.label :hearts_recovered, style: "display: block" %>
    <%= form.number_field :hearts_recovered %>
  </div>

  <div>
    <%= form.label :cooking_effect, style: "display: block" %>
    <%= form.text_field :cooking_effect %>
  </div>

  <div>
    <%= form.label :dlc, style: "display: block" %>
    <%= form.check_box :dlc %>
  </div>

